<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.department.DepartmentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/department_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/department"
            android:textColor="@color/blue_500"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/department_title"
            android:background="@color/blue_700"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/department_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/university"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/first_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/department_text_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/description"
            android:textColor="@color/blue_500"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/department_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/build_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/build_1"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/department_text_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/department_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/blue_500"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/build_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/build_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/build_2"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/department_text_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>