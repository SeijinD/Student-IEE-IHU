<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.not_network.NotNetworkActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/not_network_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_network"
            android:textColor="@color/blue_500"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/frist_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/not_network_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/blue_700"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/refresh_network"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_margin="100dp"
            app:layout_constraintTop_toBottomOf="@+id/frist_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/btn_custom"
            android:text="@string/refresh"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>